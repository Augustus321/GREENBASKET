.Nav {
  background: #8bc66a;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: relative;
}

input {
  width: 380rpx;
  height: 58rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  padding: 0 55rpx;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  background-image: url(data:image/png;base64,);
  background-color: #fff;
  background-size: 35rpx;
  background-repeat: no-repeat;
  background-position: 10rpx 10rpx;
  margin-left: 40rpx;
}

.input-pla {
  font-size: 26rpx;
  color: #c8c7cd;
}

.search {
  margin-left: 20rpx;
  color: #fff;
  font-size: 35rpx;
}

@media screen and (width:320px) {
  input {
    width: 460rpx;
  }
}

@media screen and (max-width:319px) {
  input {
    width: 440rpx;
  }
}

@media screen and (min-width:700px) {
  input {
    width: 540rpx;
    height: 30rpx;
    background-size: 25rpx;
    background-position: 10rpx;
  }
  .search{
    font-size: 25rpx;
  }
}
