/* pages/auth/auth.wxss */
.user-box{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  padding: 30rpx;
  background: #ffffff;
}
.user-text{
  font-size: 40rpx;
  text-align: center;
  margin-bottom: 40rpx;

}
.user-head{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}
.wxhead{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 40rpx;
}
.wxtext{
  font-size: 50rpx;
  color: #3e4349;
}
.qlhead{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 40rpx;
  background: #00ccff;
}
.user-btn{
  font-size: 40rpx;
  color: #ffffff;
  font-weight: bold;
  text-align: center;
  width: 465rpx;
  background: #8bc66a;
  border-radius: 10rpx;
}
button{
  padding: 10rpx 100rpx;
  background: #8bc66a;
}