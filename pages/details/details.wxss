.details-foot {
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.foot-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.foot-box {
  margin: 0 65rpx;
  text-align: center;
  height: 98rpx;
  border-top: 1px solid #efefef;
}

.foot-img {
  width: 50rpx;
  height: 48rpx;
  position: relative;
}
.foot-img-isC{
  display: block;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 500;
  left: 50%;
}
.display{
  display: none;
}

.foot-text {
  font-size: 22rpx;
  color: #9f9ea4;
  margin-top: 10rpx;
}

.foot-line {
  position: relative;
}

.foot-line::after {
  content: "";
  display: block;
  position: absolute;
  background: #9f9ea4;
  width: 1px;
  height: 60rpx;
  right: -65rpx;
  top: 50%;
  transform: translateY(-50%);
}

.foot-right {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
}

.foot-shoppingcart {
  background: rgb(255, 144, 0);
  padding: 0 10rpx;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.foot-buy {
  background: rgb(255, 102, 0);
  width: 144rpx;
    padding: 0 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

